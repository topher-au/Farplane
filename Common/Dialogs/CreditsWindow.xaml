<controls:MetroWindow x:Class="Farplane.Common.Dialogs.CreditsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Farplane.Common.Dialogs"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:controls1="clr-namespace:Farplane.Common.Controls"
        mc:Ignorable="d"
        Title="Farplane Credits" Height="410" Width="600" Loaded="CreditsWindow_OnLoaded"
        WindowStartupLocation="CenterScreen" BorderThickness="0" GlowBrush="Black" ShowMaxRestoreButton="False" ResizeMode="NoResize">
    <Window.Resources>
        <ImageBrush x:Key="FarplaneBrush" ImageSource="../../Resources/Farplane.jpg" Stretch="Uniform" />
    </Window.Resources>
    <Canvas Background="{StaticResource FarplaneBrush}" ClipToBounds="True" MouseDown="Canvas_MouseDown">
        <Canvas Name="GridMain" ClipToBounds="True" Width="600" Height="400">
            <TextBlock Width="600" TextAlignment="Center" x:Name="TextMarquee" FontSize="16" FontWeight="SemiBold" Foreground="White" />
        </Canvas>
    </Canvas>

</controls:MetroWindow>