<UserControl x:Class="Farplane.FFX2.EditorPanels.Party.PartyPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Farplane.FFX2.EditorPanels.Party"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="510"
             d:DesignWidth="480"
             mc:Ignorable="d">
    <GroupBox Header="Party">
        <StackPanel>
            <TabControl Name="TabParty"
                        Padding="0"
                        SelectionChanged="Selector_OnSelectionChanged">
                <TabItem Header="Yuna" />
                <TabItem Header="Rikku" />
                <TabItem Header="Paine" />
            </TabControl>
            <TabControl Name="TabEditor"
                        Padding="0"
                        SelectionChanged="TabEditor_OnSelectionChanged">
                <TabItem Header="Stats" />
                <TabItem Header="Dresspheres" />
            </TabControl>
            <ContentControl Name="PartyEditor" />
        </StackPanel>
    </GroupBox>
</UserControl>
