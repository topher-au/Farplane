<UserControl x:Class="Farplane.FFX2.EditorPanels.GarmentGridEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Farplane.FFX2.EditorPanels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <GroupBox Header="Garment Grids">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <ScrollViewer>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Name="GarmentGridList" />
                    <StackPanel Name="GarmentGridList2" Grid.Column="1" />
                </Grid>
            </ScrollViewer>
            <Button Grid.Row="1"
                    Margin="2"
                    Click="GiveAllGrids_Click"
                    Content="Give All Garment Grids" />
        </Grid>


    </GroupBox>
</UserControl>
