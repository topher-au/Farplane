<UserControl x:Class="Farplane.FFX2.EditorPanels.ItemsEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Farplane.FFX2.EditorPanels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d">
    <GroupBox Header="Items">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="0" Padding="2">
                <Grid Name="ItemsGrid" />
            </ScrollViewer>
            <Button Grid.Row="1"
                    Click="GiveAllItems_Click"
                    Content="Give 99 of all items" />
        </Grid>
    </GroupBox>
</UserControl>
